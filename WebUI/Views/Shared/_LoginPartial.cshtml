@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    @User.Identity.Name
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Users", "UsersDetails", "Admin")</li>
                        <li>@Html.ActionLink("Tests", "TestsDetails", "Admin")</li>
                        <li>@Html.ActionLink("ExtendedStatistics", "ExtendedStatistic", "Admin")</li>
                    }

                    <li>
                        @Html.ActionLink("Profile", "Index", "Profile", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>
                    <li>@Html.ActionLink("Setting", "Setting", "Profile")</li>
                </ul>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
