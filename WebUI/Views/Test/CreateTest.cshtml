@model WebUI.ViewModels.CreateTestViewModel
@{
    ViewBag.Title = "Create test";
}
<div id="page">
    <div class="container-fluid text-center">

        <div class="row content">
            <div class="col-sm-3">
                <h2>Discription</h2>
                <p class="text-center">
                    Here you can create your own test.
                    All tests are moderated after creation. All fields of the form and the test can have a minimum of 5 questions to be filled.
                    Below is a counter question.
                    Be careful when filling in the fields.
                </p>
                <h3 class="text-center">Number of questions:</h3>
                <h2 class="text-center" id="countQuestion">5</h2>
            </div>
            <div class="col-sm-6 text-center">
                <h1>Create test</h1>
                <div class="container">
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Test name</label>
                        <input class="form-control" name="Name" type="text" maxlength="50" form="finishForm" required>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Test time</label>
                        <input class="form-control" name="Time" type="number" min="1" max="60" form="finishForm" required />
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Discription</label>
                        <textarea class="form-control" maxlength="200" name="Discription" form="finishForm" rows="5" required></textarea>
                    </div>
                </div>
                <h3>Questions and Answers</h3>
                <div id="results">
                </div>
                <div class="animated fadeInDown">
                    <div class="form-group" name="Questions">
                        <label class="col-md-3 control-label" name="Questions">Question:</label>
                        <textarea class="form-control" type="text" maxlength="400" name="Questions" rows="5" form="finishForm" required></textarea>
                    </div>
                    <div class="form-group" name="Answers">
                        <label class="col-md-3 control-label" name="Answers">Answer:</label>
                        <input type="text" class="form-control" maxlength="20" name="Answers" form="finishForm" required>
                    </div>
                </div>
                <div class="animated fadeInDown">
                    <div class="form-group" name="Questions">
                        <label class="col-md-3 control-label" name="Questions">Question:</label>
                        <textarea class="form-control" type="text" maxlength="400" name="Questions" rows="5" form="finishForm" required></textarea>
                    </div>
                    <div class="form-group" name="Answers">
                        <label class="col-md-3 control-label" name="Answers">Answer:</label>
                        <input type="text" class="form-control" maxlength="20" name="Answers" form="finishForm" required>
                    </div>
                </div>
                <div class="animated fadeInDown">
                    <div class="form-group" name="Questions">
                        <label class="col-md-3 control-label" name="Questions">Question:</label>
                        <textarea class="form-control" type="text" maxlength="400" name="Questions" rows="5" form="finishForm" required></textarea>
                    </div>
                    <div class="form-group" name="Answers">
                        <label class="col-md-3 control-label" name="Answers">Answer:</label>
                        <input type="text" class="form-control" maxlength="20" name="Answers" form="finishForm" required>
                    </div>
                </div>
                <div class="animated fadeInDown">
                    <div class="form-group" name="Questions">
                        <label class="col-md-3 control-label" name="Questions">Question:</label>
                        <textarea class="form-control" type="text" maxlength="400" name="Questions" rows="5" form="finishForm" required></textarea>
                    </div>
                    <div class="form-group" name="Answers">
                        <label class="col-md-3 control-label" name="Answers">Answer:</label>
                        <input type="text" class="form-control" maxlength="20" name="Answers" form="finishForm" required>
                    </div>
                </div>
                <div class="animated fadeInDown">
                    <div class="form-group" name="Questions">
                        <label class="col-md-3 control-label" name="Questions">Question:</label>
                        <textarea class="form-control" type="text" maxlength="400" name="Questions" rows="5" form="finishForm" required></textarea>
                    </div>
                    <div class="form-group" name="Answers">
                        <label class="col-md-3 control-label" name="Answers">Answer:</label>
                        <input type="text" class="form-control" maxlength="20" name="Answers" form="finishForm" required>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 text-center">
                <div class="col-sm-offset-2">
                    <h2>Options</h2>
                    <p>
                        Below are the control buttons. Use the "Add a question" you can add a question to your test.
                        Name, Description and time are required for entry. When finished, click "Finish" button.
                    </p>
                    <div class="form-group">
                        <form action="/Test/AddQuestion" class="col-sm-6" data-ajax="true" data-ajax-mode="before" data-ajax-update="#results" id="addQuestionForm" method="get">
                            <button class="btn btn-info" type="submit" onclick="increaseCountQuestion()">Add question</button>
                        </form>
                        <form action="/Test/CreateTest" class="col-sm-6" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#page" id="finishForm" method="post" role="form">
                            <button class="btn btn-success" type="submit">Finish</button>
                        </form>

                    </div>
                    <p>
                        "Delete" button deletes the last question.
                    </p>
                    <div class="form-group">
                        <div class="col-sm-6">
                            <button class="btn btn-danger" onclick="deleteQuestion()">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>